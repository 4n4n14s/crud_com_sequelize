<h1>usuarios cadastrados:</h1>

<div class="container">
    {{#each users}}
        <div class="item">
            <h2>{{this.name}}</h2>
            <p>{{this.ocupation}}</p>
            <div class="action">
                <a href="/users/{{id}}" class="datails-btn">ver detalhes</a>
                <a href="/users/edit/{{id}}" class="datails-btn">editar</a>
                <form action="/users/delete/{{this.id}}" method="post">
                    <input type="submit" value="deletar" class="delete_btn">
                </form>
            </div>
        </div>

    {{/each}}
</div>